@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1>tenants in the buildings</h1>
    <table style="border:1px solid gray;padding: 5px">
        <thead>
            <tr style="border:1px solid gray;padding: 5px">
                <th style="padding: 5px">building number</th>
                <th style="padding: 5px">total number or residents</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LstnumberOfTenants)
            {
                <tr class="padding" style="border:1px solid gray">
                    <td>@item.Item1</td>
                    <td>@item.Item2</td>
                </tr>
            }
        </tbody>
    </table>
    <table style="border:1px solid gray;padding: 5px">
        <thead>
            <tr style="border:1px solid gray;padding: 5px">
                <th style="padding: 5px">building number</th>
                <th style="padding: 5px">apartment_number</th>
                <th style="padding: 5px">number of tenants</th>
                <th style="padding: 5px">original number of tenants</th>
                <th style="padding: 10px">start date</th>
                <th style="padding: 10px">end date</th>
                @*<th></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.listOfTenents)
            {
            <tr style="border:1px solid gray;padding: 5px">
                <td>@item.building_id</td>
                <td>@item.apartment_id</td>
                <td>@item.current_number_of_tenants</td>
                <td>@item.original_number_of_tenants</td>
                <td style="padding:15px;">@item.start_date</td>
                <td style="padding:15px;">@item.end_date</td>
                @*<td>
            <a class="btn btn-primary" href="">add visitors</a>
            <a class="btn btn-primary" href="">remove visitors</a>
        </td>*@
            </tr>
            }
        </tbody>
    </table>
    <h1>visitors in the building</h1>
    <table style="border:1px solid gray;padding: 5px">
        <thead>
            <tr style="border:1px solid gray;padding: 5px">
                <th style="padding: 5px">apartment number</th>
                <th style="padding: 5px">number of visitors</th>
                <th style="padding: 5px">total number of people</th>
                <th>actions</th>
                @*<th></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.guestInfoList)
            {
            <tr style="border:1px solid gray;padding: 5px">
                <td>@item.id</td>
                <td>@item.number_of_guests</td>
                <td>@(item.number_of_guests + item.current_number_of_tenants)</td>
                <td>
                    <a class="btn btn-primary" href="/add?id=@item.id&addOrSubtract=1">visitor coming</a>
                    <a class="btn btn-primary" href="/add?id=@item.id&addOrSubtract=-1">visitor going</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
